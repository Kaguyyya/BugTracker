@model Ticket
<head>
    <style>
        body{
            background-image:url(/Images/Repeat_DarkWood.png);
        }
    </style>
</head>

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Lösche ein Ticket</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="ProjectName"></label>
            <input asp-for="ProjectName"disabled class="form-control" />
            
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description"disabled class="form-control" />
           
        </div>
       
        <div class="mb-3">
            <label asp-for="AssignedTo"></label>
            <input asp-for="AssignedTo"disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="FoundBy"></label>
            <input asp-for="FoundBy"disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="TesterComment"></label>
            <input asp-for="TesterComment"disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="Severity"></label>
            <select name="Severity"id="Severity" disabled>
                <option value="Gering">Gering</option>
                 <option value="Mittel">Mittel</option>
                  <option value="Sehr Hoch">Sehr Hoch</option>
            </select>   
           
        </div>
                    
        <button type="submit" class="btn btn-primary" style="width:150px">Löschen</button>
        <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary" style="width:150px">Zurück</a>
    </div>
</form>
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
