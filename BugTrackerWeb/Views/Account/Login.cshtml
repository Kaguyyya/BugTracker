@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
    var success = ViewData["Success"] as string;
    
}
<div style="text-align:center" id="parent">
<h1>Login</h1>
@if (!string.IsNullOrEmpty(error))
{
    <h2 class=alert-danger style="padding:20px; font-size:20px">@error</h2>
}
@if (!string.IsNullOrEmpty(success))
{
    <h3 class=alert-success style="padding:20px; font-size:20px">@success</h3>
}

<form id ="form_login" action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post" autocomplete=off>
    <input type="text" name="username" placeholder="Username"/>
